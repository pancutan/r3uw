<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Id version</th>
    <th>Page</th>
    <th>Id type</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.name %></td>
    <td><%= bug.id_version %></td>
    <td><%= bug.page %></td>
    <td><%= bug.id_type %></td>
    <td><%= bug.description %></td>
    <td><%= link_to 'Show', bug %></td>
    <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
    <td><%= link_to 'Destroy', bug, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

