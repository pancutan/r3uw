<table border="1">
	<tr>
		<th>Reportado por</th>
		<th>Version</th>
		<th>Pagina</th>
		<th>Type</th>

		<% if user_signed_in? %>
		<th>Email</th>
		<% end %>

		<th>Descripcion</th>
		<th>Aceptado por Sergio</th>
		<th>Resuelto</th>

		<th></th>
	</tr>

	<% @bugs.each do |bug| %>
	<tr>
		<td align="center"><%= bug.name %></td>
		<td align="center"><%= bug.version.version %></td>
		<td align="center"><%= bug.page %></td>
		<td> <% if bug.error_type.errortype == "Ortografía / Gramática" %> <font color="orange"> <% end %>

			<% if bug.error_type.errortype == "Error Técnico" %> <font color="red"> <% end %>

				<%= bug.error_type.errortype %> </td>

		<% if user_signed_in? %>
		<td align="center"><%= bug.email %></td>
		<% end %>

		<td><%= bug.description %></td>
		<td align="center"><%= check_box_tag "cb_[#{bug.id}]", 'yes', bug.accepted, :value => bug.id, :disabled => true %> </td>

		<td align="center"><%= check_box_tag "cb_[#{bug.id}]", 'yes', bug.resolved, :value => bug.id, :disabled => true %> </td>

		<td><%= link_to '?', bug %></td>

		<% if user_signed_in? %>
		<td><%= link_to 'Edit', edit_bug_path(bug) %></td>
		<td><%= link_to 'X', bug, :confirm => 'Are you sure?', :method => :delete %> </td>
		<% end %>
	</tr>
	<% end %>
</table>

